<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAutoItemName"
        android:text="Hazel Eurotent"
        android:gravity="center"
        style="@style/TitleFontBlackLarge"
        android:padding="@dimen/common_padding_medium" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ivAutoItemImage"
        android:layout_below="@+id/tvAutoItemName"
        android:layout_above="@+id/layoutAutoItemPrice"
        android:src="@drawable/a01__hazel_tent__3m1_5t1"
        android:padding="@dimen/common_padding_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutAutoItemPrice"
        android:layout_above="@+id/layoutAutoItemChoose"
        android:background="@color/gray_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mcad"
                style="@style/TitleFontGray"
                android:padding="@dimen/common_padding_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="900"
                style="@style/TitleFontGreen"
                android:padding="@dimen/common_padding_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rub_per_hour"
                style="@style/TitleFontGray"
                android:padding="@dimen/common_padding_small"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_divider"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/out_mcad"
                    style="@style/TitleFontGray"
                    android:padding="@dimen/common_padding_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1200"
                    style="@style/TitleFontGreen"
                    android:padding="@dimen/common_padding_small"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rub_per_hour"
                    style="@style/TitleFontGray"
                    android:padding="@dimen/common_padding_small"/>

        </LinearLayout>
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutAutoItemChoose"
    android:layout_alignParentBottom="true"
    android:background="@color/custom_yellow">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Выбрать"
        android:textAllCaps="true"
        android:gravity="center"
        style="@style/TitleFontBlackLarge"
        android:padding="@dimen/common_padding_medium"/>
</LinearLayout>

</RelativeLayout>